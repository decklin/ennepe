@%name        "Boring Subject"
@%author      "Decklin Foster"
@%email       "decklin@red-bean.com"
@%description "Subject and link to an entry."
@
@{import time}@
@
@[for e in entries]@
<p>@(time.strftime('%a %d %b, %H:%M:%S', e.date)): @
<a href="@base/@e.year/@e.month/@e.day/@(e.slug).html">@
@(e.subject ? e.subject ! 'Entry')</a></p>
@[end for]@
